<table style="width:100%">
  <tr>
    <th>Image</th>
    <th>Title</th>
    <th>Description</th>
    <th>Status</th>
    <th>Actions</th>
  </tr>
  <% @items.each do |item| %>
  <tr>
    <td><%= image_tag item.image %></td>
    <td><%= item.title %></td>
    <td><%= item.description %></td>
    <td><%= item.status %></td>
    <td><%= link_to "Edit Item", edit_admin_item_path(item) %></td>
  </tr>
  <% end %>
</table>

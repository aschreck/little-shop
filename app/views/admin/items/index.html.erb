<table style="width:100%" class="table">
  <tr>
    <th>Image</th>
    <th>Title</th>
    <th>Description</th>
    <th>Status</th>
    <th>Actions</th>
  </tr>
  <% @items.each do |item| %>
  <tr>
    <td><%= image_tag item.image %></td>
    <td><%= item.title %></td>
    <td><%= item.description %></td>
    <td><%= item.status %> <%= link_to "Retire", admin_item_path(item, status: 'retired'), method: :patch if item.active? %></td>
    <td><i class="fa fa-pencil-square-o" aria-hidden="true"> </i><%= link_to "Edit", edit_admin_item_path(item) %></td>
  </tr>
  <% end %>
</table>
